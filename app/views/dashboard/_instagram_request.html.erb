<script type="text/jsx">
  function instagramRequest() {
    // react code goes here
    /** @jsx React.DOM */
    var InstagramRequest = React.createClass({
      mixins: [SetIntervalMixin], // Use the mixin
      render: function() {
        return false;
      },
      componentDidMount: function() {
        this.requestNewInstagramData();
        // call a method on the mixin to update the chart after given time
        this.setInterval(this.requestNewInstagramData, ONE_MINUTE);
      },
      requestNewInstagramData: function() {
        // reset opened tabs reminder
        firstTabOpened = 0;
        secondTabOpened = 0;
        thirdTabOpened = 0;
        // show loading spinner on process start
        $('#loading-spinner').removeClass('hidden');
        var ajax_options = {
          dataType: 'json',
          url: '/instagrams/<%= @campaign.id %>',
        };
        $.ajax(ajax_options).error(function (data, error) {
          console.error(data);
          console.error(error);
        }).success(function (data) {
          console.log(data);
          // update messages count in timeline link box
          $('#all-messages-count, #all-messages-count-navi').text(data.campaignMessageCount);
          // draw charts when selecting tab
          drawDashboardCharts();
        });
      }
    });

    React.render(
      <InstagramRequest/>,
      document.getElementById('instagram-request')
    );
  }
</script>
