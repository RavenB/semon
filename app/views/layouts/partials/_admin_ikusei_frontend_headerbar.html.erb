<div class="wrapper">
  <header class="main-header">
    <%# logo %>
    <a href="/" class="logo">
      <%# mini logo for sidebar mini 50x50 pixels %>
      <span class="logo-mini"><b>SE</b>M</span>
      <%# logo for regular state and mobile devices %>
      <span class="logo-lg"><b>SE</b>MON</span>
    </a>
    <%# header navbar %>
    <nav class="navbar navbar-static-top" role="navigation">
      <%# sidebar toggle button %>
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button"
         title="Navigation ein-/ausfahren">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <div class="navbar-custom-menu pull-left">
        <ul class="nav navbar-nav">
          <%# add message %>
          <% if is_campaign? %>
            <li title="einen neuen Beitrag manuell anlegen">
              <%= link_to new_message_path do %>
                <i class="fa fa-envelope-o"></i>
                <span class="label label-default">+</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <%# control sidebar toggle button %>
          <li title="Hilfe anzeigen/ausblenden">
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-question"></i></a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
</div>
