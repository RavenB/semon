<section class="content-header">
  <h1>
    Kampagne bearbeiten
    <small><%= campaign_name(@campaign) %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-th"></i> Kampagnen</a></li>
    <li><%= link_to "#{campaign_name(@campaign)} Dashboard", campaign_path(@campaign) %></li>
    <li class="active"><a href="#">Kampagne bearbeiten</a></li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <%= render "/campaigns/partials/form" %>
    </div>
  </div>
</section>

<% content_for :page_script do %>
  <script type="text/jsx">
    // react code goes here
    /** @jsx React.DOM */
    var HelpRenderer = React.createClass({
      displayName: 'HelpRenderer',
      render: function() {
        return (
          <div className="help-comment">
            <p>
              Hier können der Name, die optionale Beschreibung und der Kampagnenzeitraum angepasst
              werden.
            </p>
            <p>
              Wähle <a href="#" className="btn btn-success">Speichern</a><br/>
              um den Vorgang abzuschließen, oder &nbsp;
              <a href="#" className="btn btn-default">Zurück</a><br/>
              um zum Dashboard zurückzukehren.
            </p>
          </div>
        );
      }
    });

    React.render(
      <HelpRenderer/>,
      document.getElementById('help-container')
    );
  </script>
<% end %>
